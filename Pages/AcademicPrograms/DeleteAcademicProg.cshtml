@page
@model GraduationApplication.Pages.AcademicPrograms.DeleteModel
@{
    ViewData["Title"] = "Delete Academic Program";
}

<h2>Delete Academic Program</h2>
<div>
    <h4>Academic Program</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Program ID</dt>
        <dd class="col-sm-10">@Model.AcademicProgram?.ProgramId</dd>
        <dt class="col-sm-2">Program Title</dt>
        <dd class="col-sm-10">@Model.AcademicProgram?.ProgramTitle</dd>
    </dl>
</div>
<form method="post">
    <input type="hidden" asp-for="AcademicProgram.ProgramId" value="@Model.AcademicProgram?.ProgramId" />
    <p>Are you sure you want to delete this program?</p>
    <div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./AcademicProgIndex" class="btn btn-secondary">Cancel</a>
    </div>
</form>
