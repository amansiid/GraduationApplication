@page
@model GraduationApplication.Pages.GraduationApps.DeleteGradAppModel
@{
    ViewData["Title"] = "Delete Graduation Application";
}

<h2>Delete Graduation Application</h2>
<div>
    <h4>Graduation Application</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Application ID</dt>
        <dd class="col-sm-10">@Model.GradApp?.ApplicationId</dd>
        <dt class="col-sm-2">Student Name</dt>
        <dd class="col-sm-10">@Model.GradApp?.StudentName</dd>
        <dt class="col-sm-2">Program Title</dt>
        <dd class="col-sm-10">@Model.GradApp?.ProgramId</dd>
        <dt class="col-sm-2">Applied Quarter</dt>
        <dd class="col-sm-10">@Model.GradApp?.AppliedQuarter</dd>
    </dl>
</div>
<form method="post">
    <input type="hidden" asp-for="GradApp.ApplicationId" value="@Model.GradApp?.ApplicationId" />
    <p>Are you sure you want to delete this application?</p>
    <div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./GraduationAppIndex" class="btn btn-secondary">Cancel</a>
    </div>
</form>
