@page
@model GraduationApplication.Pages.GraduationApps.CreateModel
@{
    ViewData["Title"] = "Create Graduation Application";
}

<h1>Create Graduation Application</h1>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success mt-4">@Model.SuccessMessage</div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form method="post">
    <div class="form-row mb-3">
        <div class="form-group col-md-6">
            <label for="FirstName">First Name</label>
            <input type="text" id="FirstName" name="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label for="LastName">Last Name</label>
            <input type="text" id="LastName" name="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row mb-3">
        <div class="form-group col-md-6">
            <label asp-for="GraduationApplication.ProgramId">Program</label>
            <select asp-for="GraduationApplication.ProgramId" class="form-control" asp-items="Model.AcademicPrograms">
                <option value="">Select Program</option>
            </select>
            <span asp-validation-for="GraduationApplication.ProgramId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row mb-3">
        <div class="form-group col-md-6">
            <label for="Quarter">Applied Quarter</label>
            <select id="Quarter" name="Quarter" class="form-control">
                <option value="Autumn">Autumn</option>
                <option value="Winter">Winter</option>
                <option value="Spring">Spring</option>
                <option value="Summer">Summer</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="Year">Applied Year</label>
            <select id="Year" name="Year" class="form-control">
                @for (int year = DateTime.Now.Year; year <= DateTime.Now.Year + 5; year++)
                {
                    <option value="@year">@year</option>
                }
            </select>
        </div>
    </div>

    <!-- Buttons with spacing -->
    <div class="form-row mt-3">
        <div class="form-group col-md-6">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
    <div class="form-row mt-3">
        <div class="form-group col-md-6">
            <a asp-page="./GraduationAppIndex" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</form>
